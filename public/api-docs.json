{
  "apiVersion": "2.0",
  "swaggerVersion": "1.2",
  "basePath": "/",
  "resourcePath": "/api",
  "produces": [
    "application/vnd.api+json"
  ],
  "apis": [
    {
      "path": "api/v2/feeds",
      "operations": [
        {
          "method": "GET",
          "summary": "Get fact-checks that are similar to the input query and type.",
          "notes": "",
          "type": "FactCheck",
          "nickname": "getFeeds",
          "authorizations": {},
          "parameters": [
            {
              "name": "filter[type]",
              "description": "Query type. Supported values are text (default), audio, video and image.",
              "required": true,
              "type": "string",
              "paramType": "query"
            },
            {
              "name": "filter[query]",
              "description": "Input query. A piece of text if the request type is 'text'. If the request type is 'audio', 'video' or 'image', then a public file URL must be provided.",
              "required": true,
              "type": "string",
              "paramType": "query"
            },
            {
              "name": "filter[after]",
              "description": "Optional date filter. If provided, only fact-checks created after that date will be considered. Format: YYYY-MM-DD.",
              "required": false,
              "type": "date",
              "paramType": "query"
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "message": "Successful request"
            },
            {
              "code": 401,
              "message": "Unauthorized (API token must be provided)"
            },
            {
              "code": 500,
              "message": "Unknown error"
            }
          ]
        }
      ]
    }
  ],
  "models": {
    "FactCheck": {
      "id": "FactCheck",
      "properties": {
        "claim": { "type": "string" },
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "url": { "type": "string" },
        "report_title": { "type": "string" },
        "report_summary": { "type": "string" },
        "organization": { "type": "string" },
        "rating": { "type": "string" }
      }
    }
  },
  "authorizations": null,
  "info": {
    "title": "Check",
    "description": "Verify breaking news online"
  }
}

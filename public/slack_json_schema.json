{
  "type": "object",
  "properties": {
    "notifications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "event_type": {
            "type": "string",
            "enum": [
              {
                "key": "any_activity",
              },
              {
                "key": "item_added",
              },
              {
                "key": "status_changed",
              }
            ],
            "allOf": [
              {
                "if": {
                  "properties": { "event_type": { "const": "item_added" } }
                },
                "then": {
                  "properties": { 
                    "values": { 
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": <%= projects.to_json %>
                      }
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "event_type": { "const": "status_changed" } }
                },
                "then": {
                  "properties": {
                    "values": { 
                      "type": "array",
                      "items": {
                        "type": "string",
                        "enum": <%= statuses.to_json %>
                      }
                    }
                  }
                }
              },
            ]
          },
          "slack_channel": {
            "type": "string"
          }
        }
      }
    }
  }
}
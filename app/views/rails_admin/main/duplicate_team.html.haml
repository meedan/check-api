- if request.post?
  %h4= t("admin.actions.duplicate_team.the_team_is_being_copied")
  %p
    = t("admin.actions.duplicate_team.url_when_ready.html", copy_url: "#{CONFIG['checkdesk_client']}/#{@object.generate_copy_slug}")
- else
  %h4
    = t("admin.actions.duplicate_team.are_you_sure_you_want_to_copy_team.html", team: @model_config.with(object: @object).object_label)

  = form_for(@object, url: "/admin/team/#{@object.id}/duplicate_team", html: {method: "post"}) do
    .form-actions
      %button.btn.btn-danger{type: "submit", :'data-disable-with' => "admin.form.confirmation"}
        %i.icon-white.icon-ok
        = t("admin.form.confirmation")
      %button.btn{type: "submit", name: "_continue", :'data-disable-with' => "admin.form.cancel"}
        %i.icon-remove
        = t("admin.form.cancel")

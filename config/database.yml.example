default: &default
  adapter: postgresql
  encoding: unicode
  pool: 60
  timeout: 10000
  host: postgres
  username: postgres
  password: postgres

development:
  <<: *default
  database: check_development

# Warning: The database(s) defined as "testXXX" will be erased and
# re-generated from your development database when you run "rake".
# Do not set to the same as development or production.
test:
  <<: *default
  database: check_test<%= ENV['TEST_ENV_NUMBER'] %>

production:
  <<: *default
  database: check_production
